# Environment Variables for Deployment

# Basic server configuration
PORT=3001
NODE_ENV=production

# Database configuration
DB_PATH=./data/trickortreat.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600000  # 1 hour in milliseconds

# Security settings
TRUST_PROXY=true
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=30  # requests per window
CORS_ORIGIN=*  # or specify your domain

# Features
ENABLE_STATS=true
ENABLE_HEALTH_CHECK=true
MAX_MARKERS=500

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL/HTTPS (if terminating SSL in Node.js instead of reverse proxy)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Development settings (only for NODE_ENV=development)
AUTO_RELOAD=true
VERBOSE_LOGGING=true